<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>
        {% block title %}Welcome!{% endblock %}
    </title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Ionicons CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/5.5.2/collection/components/icon/icon.min.css">
    <!-- Bootstrap Icons CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('styles.css') }}">
    {% block stylesheets %}{% endblock %}
            {{ encore_entry_link_tags('app') }}
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Ionicons JavaScript -->
    <script type="module" src="https://cdn.jsdelivr.net/npm/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://cdn.jsdelivr.net/npm/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

</head>
<body>
    {% block header %}
        <header>
            <nav class="navbar navbar-expand-sm navbar-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">
                        <img src="{{asset('img/saxophony_25.jpg')}}" alt="Avatar Logo" class="rounded-pill">
                    </a>
                    <br/>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="collapsibleNavbar">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_main') }}">{% trans %}Main{% endtrans %}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_continent_index') }}">{% trans %}Gestion des Continents{% endtrans %}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_pays_index') }}">{% trans %}Gestion des Pays{% endtrans %}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_couleur_index') }}">{% trans %}Gestion des Couleurs{% endtrans %}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_typebiere_index') }}">{% trans %}Gestion des Types{% endtrans %}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_fabricant_index') }}">{% trans %}Gestion des Fabricants{% endtrans %}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_marque_index') }}">{% trans %}Gestion des Marques{% endtrans %}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_article_index') }}">{% trans %}Gestion des Articles{% endtrans %}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_ticket_index') }}">{% trans %}Gestion des Tickets{% endtrans %}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_vendre_index') }}">{% trans %}Gestion des Vendre{% endtrans %}</a>
                            </li>
                            
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    {% endblock %}
    <main class="container">
        {% block body %}{% endblock %}
    </main>
    {% block footer %}
        <footer>
            <div class="center-justified">
            <p>&copy;2024 Saxonimus - Saxofony | All Rights Reserved</p>
            </div>        
        </footer>
    {% endblock %}
    {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}
    {% endblock %}
</body>
</html>